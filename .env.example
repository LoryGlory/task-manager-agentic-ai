# Environment Variables Template
# Copy this file to .env and replace with your actual values
# NEVER commit the .env file to version control!

# Database Configuration
# Generate a strong password: openssl rand -base64 32 | tr -d "=+/" | cut -c1-32
DB_URL=jdbc:postgresql://localhost:5432/taskmanager
DB_USERNAME=taskuser
DB_PASSWORD=<GENERATE_SECURE_PASSWORD_HERE>

# Server Configuration
SERVER_PORT=8080

# Frontend URL (for CORS)
# Local: http://localhost:5173
# Production: Your Vercel deployment URL (e.g., https://your-app.vercel.app)
FRONTEND_URL=http://localhost:5173
